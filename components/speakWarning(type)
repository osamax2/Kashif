async function speakWarning(type) {

    if (type === "pothole" && !warnPothole) return;
    if (type === "accident" && !warnAccident) return;
    if (type === "environment" && !warnSpeed) return;

    let message = "";

    switch (type) {
        case "pothole":
            message = "تحذير! توجد حفرة أمامك";
            break;
        case "accident":
            message = "تحذير! حادث على الطريق";
            break;
        case "environment":
            message = "تنبيه! خطر بيئي أمامك";
            break;
    }

    await Speech.speak(message, {
        language: "ar-SA",
        rate: 0.9,
        pitch: 1
    });
}
